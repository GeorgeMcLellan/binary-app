<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonBackgroundClicked"
                android:endColor="@color/buttonBackgroundClicked"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:endColor="@color/buttonBackgroud"
                android:startColor="@color/buttonBackgroud"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>